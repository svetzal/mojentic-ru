{
  "gates": [
    {
      "name": "format",
      "command": "cargo fmt --check",
      "required": true
    },
    {
      "name": "lint",
      "command": "cargo clippy --all-targets --all-features -- -D warnings",
      "required": true
    },
    {
      "name": "test",
      "command": "cargo test --verbose --all-features",
      "required": true
    },
    {
      "name": "build",
      "command": "cargo build --verbose --all-features",
      "required": true
    },
    {
      "name": "security-deny",
      "command": "cargo deny check",
      "required": false
    },
    {
      "name": "security-audit",
      "command": "cargo audit",
      "required": false
    }
  ]
}
